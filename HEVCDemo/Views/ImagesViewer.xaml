<UserControl x:Class="HEVCDemo.Views.ImagesViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="38"/>
            <RowDefinition Height="720"/>
            <RowDefinition Height="38"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1280"/>
        </Grid.ColumnDefinitions>
        <Button Command="{Binding SelectVideoClick}" Width="100" HorizontalAlignment="Left" Margin="4">Select Video</Button>
        <Border Grid.Row="1" BorderThickness="2" BorderBrush="Black">
            <Image Source="{Binding CurrentImage}" />    
        </Border>

        <Grid Grid.Row="2" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="4" Command="{Binding BackwardClick}">
                <iconPacks:PackIconModern Kind="NavigatePrevious"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center" />
            </Button>
            <Button Grid.Column="1" Margin="4"  Command="{Binding ForwardClick}">
                <iconPacks:PackIconModern Kind="NavigateNext"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center" />
            </Button>
        </Grid>
    </Grid>
    <UserControl.InputBindings>
        <KeyBinding Key="Left" Command="{Binding BackwardClick}"/>
        <KeyBinding Key="Right" Command="{Binding ForwardClick}"/>
    </UserControl.InputBindings>
</UserControl>
